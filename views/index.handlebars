<div class="jumbotron">
	<img src="/assets/images/burgers.png">
	<h1 class="display-4">Burgers!</h1>
</div>
<h2>Add your burgers order to the list then...DEVOUR THEM!</h2>	
<div class="container">
	<div class="row">
		<div class="col-md-6 col-md-offset-1" id="burger-list-col">
			<h3 id="burger-list">Burger List</h3>			
			<div class="panel-panel default">
				<ul class="list-group">
					{{#each burger_data}}
					{{#unless this.devoured}}
					<li class="list-group-item">
						<div class="input-group">							
							<p class="lead"> {{this.burger_name}}</p>
							<span class="input-group-btn">								
								<form class="devour-form button-size">									
									<input input type="hidden" class="burger_id" type="text" value={{this.id}}><br>
									<button type="submit" class="btn btn-default" id="dvrbtn">Devour it!</button>
								</form>
							</span>
						</div>
					</li>
					{{/unless}}
					{{/each}}
				</ul>
			</div>
		</div>		
			<div class="col-md-4 col-md-offset-1">				
				<h3 id="devour-list">Devoured List</h3>
				<div class="panel panel-default">
					<ul class="list-group">
						{{#each burger_data}}
						{{#if this.devoured}}
						<li class="list-group-item">
							<p class="lead">{{this.burger_name}}</p>
						</li>
						{{/if}}
						{{/each}}
					</ul>
				</div>
			</div>
	</div>		
	<div class="row">	
		<div class="col-md-10">
			<form class="create-update-form" action="/burgers/create" method="POST">
				<div class="form-group">
					<textarea class="form-control input-lg" type="text" name="burger_name" value="" id="enter_text" rows="3"> </textarea>
				</div>
				<button class="btn btn-default btn-lg" type="submit">Submit</button>
			</form>
		</div>
	</div>
</div>

